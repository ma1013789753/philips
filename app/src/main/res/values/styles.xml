<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:windowTranslucentStatus">true</item>
        &lt;!&ndash; 窗口透明的导航栏 &ndash;&gt;
        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!-- 设置灰度的值，当为1时，界面除了我们的dialog内容是高亮显示之外，其余区域都是黑色的，完全看不到其他内容，系统的默认值是0.5 -->
        <item name="android:backgroundDimAmount">0.5</item>
        <!-- 是否浮现在activity之上，必须设为true，否则自己独立占一个界面，这根本就不像是一个对话框了 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>


    </style>

    <style name="link_fail_left_tv">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/link_fial_text_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="link_fail_right_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">33dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
