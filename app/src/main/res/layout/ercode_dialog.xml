<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/shape_wight"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px">
        <ImageView
            android:id="@+id/backbar"
            android:layout_width="100px"
            android:src="@drawable/lefticon_black"
            android:padding="30px"
            android:layout_height="100px" />

        <TextView
            android:id="@+id/titlebar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Device sharing"
            android:textColor="@color/black"
            android:textSize="32px" />
        <ImageView
            android:id="@+id/menubar"
            android:layout_alignParentRight="true"
            android:layout_width="100px"
            android:padding="30px"
            android:layout_height="100px" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textColor="@color/c999"
            android:text="The QR Code will fail in 15 minutes"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/qr_image"
            android:layout_width="200dp"
            android:scaleType="fitXY"
            android:layout_height="200dp" />
        <TextView
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textColor="@color/c999"
            android:text="Please use PHILPS APP scavenging"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>